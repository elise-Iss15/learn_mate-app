{
  "info": {
    "name": "LearnMate South Sudan API",
    "description": "Complete API collection for LearnMate e-learning platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"test_student\",\n  \"email\": \"student@test.com\",\n  \"password\": \"Password123\",\n  \"role\": \"student\",\n  \"first_name\": \"Test\",\n  \"last_name\": \"Student\",\n  \"grade_level\": 8,\n  \"preferred_language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@test.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh-token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh-token"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Subjects",
      "item": [
        {
          "name": "Get All Subjects",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/subjects?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["subjects"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "grade_level",
                  "value": "8",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Subject by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/subjects/1",
              "host": ["{{baseUrl}}"],
              "path": ["subjects", "1"]
            }
          }
        },
        {
          "name": "Create Subject",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Mathematics - Grade 8\",\n  \"description\": \"Comprehensive mathematics course\",\n  \"grade_level\": 8\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/subjects",
              "host": ["{{baseUrl}}"],
              "path": ["subjects"]
            }
          }
        }
      ]
    },
    {
      "name": "Lessons",
      "item": [
        {
          "name": "Get Lesson by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/lessons/1",
              "host": ["{{baseUrl}}"],
              "path": ["lessons", "1"]
            }
          }
        },
        {
          "name": "Get Lessons by Subject",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/lessons/subject/1",
              "host": ["{{baseUrl}}"],
              "path": ["lessons", "subject", "1"]
            }
          }
        },
        {
          "name": "Download Lesson PDF",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/lessons/1/download",
              "host": ["{{baseUrl}}"],
              "path": ["lessons", "1", "download"]
            }
          }
        },
        {
          "name": "Create Lesson (JSON only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subject_id\": 1,\n  \"title\": \"Introduction to Algebra\",\n  \"content\": \"Algebra is a branch of mathematics...\",\n  \"order_number\": 1,\n  \"language\": \"en\",\n  \"is_published\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lessons",
              "host": ["{{baseUrl}}"],
              "path": ["lessons"]
            }
          }
        },
        {
          "name": "Create Lesson with PDF",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "subject_id",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "title",
                  "value": "Introduction to Algebra",
                  "type": "text"
                },
                {
                  "key": "content",
                  "value": "Algebra is a branch of mathematics dealing with symbols and rules...",
                  "type": "text"
                },
                {
                  "key": "order_number",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "language",
                  "value": "en",
                  "type": "text"
                },
                {
                  "key": "is_published",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "Select a PDF file to upload"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/lessons",
              "host": ["{{baseUrl}}"],
              "path": ["lessons"]
            }
          }
        },
        {
          "name": "Update Lesson (JSON only)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Lesson Title\",\n  \"content\": \"Updated lesson content...\",\n  \"is_published\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lessons/1",
              "host": ["{{baseUrl}}"],
              "path": ["lessons", "1"]
            }
          }
        },
        {
          "name": "Update Lesson with PDF",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Updated Algebra Lesson",
                  "type": "text"
                },
                {
                  "key": "content",
                  "value": "Updated algebra content...",
                  "type": "text"
                },
                {
                  "key": "is_published",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "Select a new PDF file to replace existing one"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/lessons/1",
              "host": ["{{baseUrl}}"],
              "path": ["lessons", "1"]
            }
          }
        },
        {
          "name": "Delete Lesson",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/lessons/1",
              "host": ["{{baseUrl}}"],
              "path": ["lessons", "1"]
            }
          }
        },
        {
          "name": "Update Lesson Progress",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_completed\": true,\n  \"time_spent\": 1200\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lessons/1/progress",
              "host": ["{{baseUrl}}"],
              "path": ["lessons", "1", "progress"]
            }
          }
        }
      ]
    },
